<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org/DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="board">

	<!-- board 전체 반환 -->
	<select id="selectAll" resultClass="boardVO">
		select *
		  from board
		 order by seq desc
	</select>
	
	<insert id="insertBoard" parameterClass="boardVO">
		insert into board
			   values(board_seq.nextval, #subject#, #writer#, #mail#, #password#, #content#, 0, #wip#, sysdate)
			   
		<selectKey keyProperty="seq" resultClass="int">
			select board_seq.currval
			  from dual
		</selectKey>
	</insert>
	
	<delete id="deleteBoard" parameterClass="int">
		delete from board
		 where seq = #data#
	</delete>

 	<insert id="insertReply" parameterClass="replyVO">
		insert into reply
		       values(reply_seq.nextval, #bonum#, #name#, #cont#, sysdate)

 		<selectKey keyProperty="renum" resultClass="int">
			select reply_seq.currval
			  from dual
		</selectKey>
	</insert>

 	<select id="listReply" parameterClass="int" resultClass="replyVO">
		select *
		  from reply
		 where bonum = #bonum#
	</select>
	
	<delete id="deleteReply" parameterClass="int">
		delete from reply
		 where renum = #renum# 
	</delete>
	
	<update id="modifyReply" parameterClass="map">
		update reply 
		   set cont = #cont#
		 where renum = #renum# 
	</update>
</sqlMap>